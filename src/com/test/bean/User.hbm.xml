<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.test.bean.User" table="users">
		
		<id name="userid" column="userid" type="int">
			<generator class="increment"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		
		<property name="username" column="username" type="string"></property>
		<property name="userpassword" column="userpassword" type="string"></property>
		<property name="userphone" column="userphone" type="string"></property>
	</class>

</hibernate-mapping>

